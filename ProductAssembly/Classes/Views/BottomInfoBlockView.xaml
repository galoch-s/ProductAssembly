<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="ProductAssembly.BottomInfoBlockView">
	<ContentView.Content>
		<StackLayout Orientation="Horizontal" BackgroundColor="{StaticResource appGrayBottom}" Padding="16, 10" >
			<StackLayout Spacing="2">
				<Label x:Name="lblName" Text="Name" TextColor="{StaticResource appBlue}" FontSize="15" />
				<Label x:Name="lblPhone" Text="Telephone" TextColor="{StaticResource appBlack}" FontSize="17" />
			</StackLayout>
			<Image x:Name="imgIcon" HorizontalOptions="EndAndExpand" />
		</StackLayout>
	</ContentView.Content>
</ContentView>
