<?xml version="1.0" encoding="UTF-8"?>
<xlabs:FastGridCell
	xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="ProductAssembly.ContainerCell"
	xmlns:xlabs="clr-namespace:XLabs.Forms.Controls">

	<StackLayout BackgroundColor="White">
		<Button x:Name="btnNotInWork" Clicked="ContainerClick" WidthRequest="180" HeightRequest="60" BackgroundColor="{StaticResource appRed}" TextColor="White" IsVisible="false" />
		<Button x:Name="btnInWork" 	  Clicked="ContainerClick" WidthRequest="180" HeightRequest="60" BackgroundColor="White" TextColor="{StaticResource appRed}" 
			BorderColor="{StaticResource appRed}" BorderWidth="1" IsVisible="false" />
	</StackLayout>
</xlabs:FastGridCell>
