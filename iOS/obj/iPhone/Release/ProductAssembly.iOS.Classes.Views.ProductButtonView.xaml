<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
		xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="ProductAssembly.ProductButtonView"
		>
	<ContentView.Content>
		<StackLayout Spacing="15">
			<Button Text="Весь ассортимент" BackgroundColor="{StaticResource appYellow}" Clicked="OnClickProductAll" Style="{StaticResource btnMainProduct}" />
			<Grid ColumnSpacing = "12">
				<Button Grid.Row="0" Grid.Column="0" Text="Только открытые" BackgroundColor="{StaticResource appGreen}" 
					Clicked="OnClickProductActive" Style="{StaticResource btnMainProduct}" />
				<Button Grid.Row="0" Grid.Column="1" Text="Только закрытые" BackgroundColor="{StaticResource appBlue}" 
					Clicked="OnClickProductClose" Style="{StaticResource btnMainProduct}" />
			</Grid>
		</StackLayout>
	</ContentView.Content>
</ContentView>
